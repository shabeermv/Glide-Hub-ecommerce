function retryPayment(orderId) {
    console.log('Retrying payment for order:', orderId);
    
    // Show loading state
    const retryBtn = document.getElementById('retryPayment');
    if (retryBtn) {
        retryBtn.disabled = true;
        retryBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Processing...';
    }

    fetch('/create-razorpay-order', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ orderId, isRetry: true })
    })
    .then(response => {
        if (!response.ok) {
            throw new Error(`HTTP error! Status: ${response.status}`);
        }
        return response.json();
    })
    .then(data => {
        // Reset button state
        if (retryBtn) {
            retryBtn.disabled = false;
            retryBtn.innerHTML = 'Retry Payment';
        }

        if (data.success) {
            const options = {
                key: data.razorpayKeyId,
                amount: data.amount,
                currency: "INR",
                name: "Your Store Name",
                description: "Retry Payment for Order #" + orderId,
                order_id: data.orderId,
                prefill: {
                    name: data.prefill?.name || '',
                    email: data.prefill?.email || '',
                    contact: data.prefill?.contact || ''
                },
                theme: {
                    color: "#3399cc"
                },
                handler: function (response) {
                    console.log('Payment successful:', response);
                    verifyRetryPayment({
                        razorpay_payment_id: response.razorpay_payment_id,
                        razorpay_order_id: response.razorpay_order_id,
                        razorpay_signature: response.razorpay_signature,
                        order_id: data.yourOrderId
                    });
                },
                modal: {
                    ondismiss: function() {
                        console.log('Payment modal closed');
                        if (retryBtn) {
                            retryBtn.disabled = false;
                        }
                    }
                }
            };

            const rzp = new Razorpay(options);
            rzp.open();

            rzp.on("payment.failed", function (response) {
                console.error("Retry payment failed:", response.error);
                
                // Show error modal
                const errorMsg = response.error.description || "Payment failed. Please try again.";
                showPaymentError(errorMsg);
                
                if (retryBtn) {
                    retryBtn.disabled = false;
                }
            });
        } else {
            alert(data.message || "Failed to retry payment. Please try again.");
        }
    })
    .catch(error => {
        console.error("Error during retry payment:", error);
        alert("An error occurred: " + error.message);
        
        // Reset button state
        if (retryBtn) {
            retryBtn.disabled = false;
            retryBtn.innerHTML = 'Retry Payment';
        }
    });
}

function verifyRetryPayment(paymentData) {
    fetch('/verify-razorpay-payment', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ ...paymentData, isRetry: true })
    })
    .then(response => {
        if (!response.ok) {
            throw new Error('Network response was not ok');
        }
        return response.json();
    })
    .then(data => {
        if (data.success) {
            // Show success message
            showPaymentSuccess(data.orderId || data._id);
            
            // Redirect after delay
            setTimeout(() => {
                window.location.href = '/orders';
            }, 3000);
        } else {
            alert(data.message || 'Payment verification failed. Please contact support.');
        }
    })
    .catch(error => {
        console.error('Error during payment verification:', error);
        alert('An error occurred during payment verification: ' + error.message);
    });
}

function showPaymentError(message) {
    // Ensure error modal exists
    ensureModalExists(
        'paymentErrorModal',
        'Payment Failed',
        `<p class="text-danger">${message}</p>`,
        'Close'
    );
    
    const errorModal = new bootstrap.Modal(document.getElementById('paymentErrorModal'));
    errorModal.show();
}

function showPaymentSuccess(orderId) {
    // Ensure success modal exists
    ensureModalExists(
        'paymentSuccessModal',
        'Payment Successful',
        `
            <div class="text-center">
                <i class="fas fa-check-circle text-success" style="font-size: 50px;"></i>
                <p class="mt-3">Payment completed successfully!</p>
                <p class="text-muted">Order ID: #${orderId}</p>
            </div>
        `,
        'View Orders'
    );
    
    const successModal = new bootstrap.Modal(document.getElementById('paymentSuccessModal'));
    successModal.show();
}
