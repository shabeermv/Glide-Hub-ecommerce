<%- include("../../views/partials/admin/header.ejs") %>

<main class="main-wrap">
  <header class="main-header navbar"></header>

  <div class="container mt-4">
    <a href="/admin/userOrders" class="btn btn-success btn-lg">Back</a>

    <h2 class="text-center">Cancel Requested Orders</h2>
    <table class="table table-bordered table-hover mt-3">
      <thead class="table-dark">
        <tr>
          <th>Order ID</th>
          <th>Product</th>
          <th>Reason</th>
          <th>Price</th>
          <th>Type</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% if (returnOrders.length > 0) { %>
          <% returnOrders.forEach(order => { %>
            <% order.products.forEach(product => { %>
              <tr>
                <td><%= order.orderId %></td>
                <td>
                  <% if (product.productId) { %>
                    <%= product.productId.title %>
                  <% } else { %>
                    Unknown Product
                  <% } %>
                </td>
                <td><%= product.returnReason %></td>
                <td>â‚¹<%= product.price ? product.price.toFixed(2) : "0.00" %></td>
                <td>
                  <% if (product.isFullOrderReturn) { %>
                    <span class="badge bg-warning text-dark">Full Order</span>
                  <% } else { %>
                    <span class="badge bg-info text-dark">Single Item</span>
                  <% } %>
                </td>
                <td>
                  <button class="btn btn-success btn-sm approve-return"
                          data-order-id="<%= order._id %>"
                          data-product-order-id="<%= product.productOrderId || '' %>"
                          data-is-full-order="<%= product.isFullOrderReturn ? 'true' : 'false' %>">
                    Approve
                  </button>
                  <button class="btn btn-danger btn-sm reject-return"
                          data-order-id="<%= order._id %>"
                          data-product-order-id="<%= product.productOrderId || '' %>"
                          data-is-full-order="<%= product.isFullOrderReturn ? 'true' : 'false' %>">
                    Reject
                  </button>
                </td>
              </tr>
            <% }) %>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="6" class="text-center">No cancel requests found.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</main>

<%- include("../../views/partials/admin/footer.ejs") %>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
   document.addEventListener("DOMContentLoaded", function () {
  // Handle Approve Button Click
  document.querySelectorAll(".approve-return").forEach(button => {
    button.addEventListener("click", function () {
      const orderId = this.getAttribute("data-order-id");
      const productOrderId = this.getAttribute("data-product-order-id");
      const isFullOrder = this.getAttribute("data-is-full-order") === "true";
      handleReturnAction(orderId, productOrderId, "approved", isFullOrder);
    });
  });

  // Handle Reject Button Click
  document.querySelectorAll(".reject-return").forEach(button => {
    button.addEventListener("click", function () {
      const orderId = this.getAttribute("data-order-id");
      const productOrderId = this.getAttribute("data-product-order-id");
      const isFullOrder = this.getAttribute("data-is-full-order") === "true";
      handleReturnAction(orderId, productOrderId, "rejected", isFullOrder);
    });
  });

  // Function to Send Approve/Reject Request to Backend
  function handleReturnAction(orderId, productOrderId, action, isFullOrder) {
    fetch("/admin/cancelOrderAction", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ 
        orderId, 
        productOrderId, 
        action,
        isFullOrder 
      })
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        alert(`cancel request ${action} successfully!`);
        location.reload(); // Refresh the page to update UI
      } else {
        alert(`Error: ${data.message}`);
      }
    })
    .catch(error => {
      console.error("Error:", error);
      alert("Something went wrong. Please try again.");
    });
  }
});

    
</script>

