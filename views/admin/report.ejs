<%- include("../../views/partials/admin/header.ejs") %>

<main class="main-wrap">
  <div class="container mt-4">
    <h2 class="mb-3">ðŸ“Š Sales Report</h2>

    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } else { %>

      <!-- PDF Download Button -->
      <div class="mb-3 text-end">
        <a
          href="/admin/sales-report/download?startDate=<%= startDate %>&endDate=<%= endDate %>"
          class="btn btn-danger"
        >
          <i class="bi bi-file-earmark-pdf"></i> Download as PDF
        </a>
      </div>

      <!-- Report Card -->
      <div class="card shadow-sm">
        <div class="card-body">
          <h6 class="card-subtitle mb-3 text-muted">
            Report from <strong><%= startDate %></strong> to <strong><%= endDate %></strong>
          </h6>

          <!-- Sales Data Table -->
          <div class="table-responsive">
            <table class="table table-striped table-bordered align-middle text-center">
              <thead class="table-dark">
                <tr>
                  <th>Date</th>
                  <th>Total Sales (â‚¹)</th>
                  <th>Order Count</th>
                </tr>
              </thead>
              <tbody>
                <% if (salesData.length === 0) { %>
                  <tr>
                    <td colspan="3" class="text-muted">No sales found for this period</td>
                  </tr>
                <% } else { %>
                  <% salesData.forEach(item => { %>
                    <tr>
                      <td><%= item.date %></td>
                      <td class="fw-bold text-success">â‚¹<%= item.totalSales.toFixed(2) %></td>
                      <td><%= item.orderCount %></td>
                    </tr>
                  <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>

          <!-- Summary -->
          <div class="mt-4">
            <h5>ðŸ“ˆ Summary</h5>
            <p><strong>Total Revenue:</strong> â‚¹<%= totalRevenue.toFixed(2) %></p>
            <p><strong>Total Coupons Used:</strong> <%= totalCouponsUsed %></p>
            <p>
              <strong>Top Selling Category:</strong>
              <%= topCategory._id %> (<%= topCategory.count %> sold)
            </p>
          </div>

          <!-- Order Status Table -->
          <div class="mt-4">
            <h5>ðŸ“¦ Order Status Breakdown</h5>
            <table class="table table-bordered text-center">
              <thead class="table-secondary">
                <tr>
                  <th>Status</th>
                  <th>Count</th>
                </tr>
              </thead>
              <tbody>
                <% for (let key in orderStatusCounts) { %>
                  <tr>
                    <td><%= key %></td>
                    <td><%= orderStatusCounts[key] %></td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

    <% } %>

    <!-- Back Button -->
    <div class="mt-4">
      <a href="/admin/home" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
      </a>
    </div>
  </div>
</main>

<%- include("../../views/partials/admin/footer.ejs") %>
