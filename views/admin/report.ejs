<%- include("../../views/partials/admin/header.ejs") %>
<main class="main-wrap">
  <header class="main-header navbar"></header>

  <div class="container mt-4">
    <h2 class="mb-3">ðŸ“Š Sales Report</h2>

    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } else { %>
      <div class="card shadow-sm">
        <div class="card-body">
          <h6 class="card-subtitle mb-3 text-muted">
            Report from <strong><%= startDate %></strong> to <strong><%= endDate %></strong>
          </h6>

          <div class="table-responsive">
            <table class="table table-striped table-bordered align-middle text-center">
              <thead class="table-dark">
                <tr>
                  <th>Date</th>
                  <th>Total Sales (â‚¹)</th>
                  <th>Order Count</th>
                </tr>
              </thead>
              <tbody>
                <% if (salesData.length === 0) { %>
                  <tr>
                    <td colspan="3" class="text-muted">No sales found for this period</td>
                  </tr>
                <% } else { %>
                  <% salesData.forEach(item => { %>
                    <tr>
                      <td><%= item.date %></td>
                      <td class="fw-bold text-success">â‚¹<%= item.totalSales.toFixed(2) %></td>
                      <td><%= item.orderCount %></td>
                    </tr>
                  <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>

          <!-- Summary -->
          <div class="mt-3">
            <p><strong>Total Orders:</strong> <%= salesData.reduce((sum, item) => sum + item.orderCount, 0) %></p>
            <p><strong>Total Sales:</strong> â‚¹<%= salesData.reduce((sum, item) => sum + item.totalSales, 0).toFixed(2) %></p>
          </div>
        </div>
      </div>
    <% } %>

    <div class="mt-4">
      <a href="/admin/home" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
      </a>
    </div>
  </div>

<%- include("../../views/partials/admin/footer.ejs") %>
