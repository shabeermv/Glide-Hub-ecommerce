            <script>
         document.addEventListener("DOMContentLoaded", function () {
    const ctx = document.getElementById("myChart").getContext("2d");
    let myChart;

    async function fetchSalesData(startDate, endDate) {
        try {
            const url = `/admin/sales-data?startDate=${startDate}&endDate=${endDate}`;
            const response = await fetch(url);
            
            if (!response.ok) {
                throw new Error(`HTTP error! Status: ${response.status}`);
            }
            
            const salesData = await response.json();

            // Format dates for better display
            const labels = salesData.map(data => {
                const date = new Date(data._id);
                return date.toLocaleDateString();
            });
            
            const totalSales = salesData.map(data => data.totalSales);
            const orderCount = salesData.map(data => data.orderCount);

            // Calculate summary statistics
            const totalSalesSum = totalSales.reduce((sum, value) => sum + value, 0);
            const totalOrdersSum = orderCount.reduce((sum, value) => sum + value, 0);
            const avgOrderValue = totalOrdersSum > 0 ? totalSalesSum / totalOrdersSum : 0;

            // Update summary statistics in the UI
            document.getElementById("totalSalesValue").textContent = `₹${totalSalesSum.toLocaleString('en-IN')}`;
            document.getElementById("totalOrdersValue").textContent = totalOrdersSum;
            document.getElementById("avgOrderValue").textContent = `₹${avgOrderValue.toLocaleString('en-IN', { maximumFractionDigits: 2 })}`;

            if (myChart) myChart.destroy(); // Destroy old chart before creating a new one

            myChart = new Chart(ctx, {
                type: "line",
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: "Total Sales (₹)",
                            data: totalSales,
                            backgroundColor: "rgba(75, 192, 192, 0.3)",
                            borderColor: "rgba(75, 192, 192, 1)",
                            borderWidth: 2,
                            fill: true,
                            tension: 0.4,
                            yAxisID: 'y'
                        },
                        {
                            label: "Total Orders",
                            data: orderCount,
                            backgroundColor: "rgba(255, 99, 132, 0.3)",
                            borderColor: "rgba(255, 99, 132, 1)",
                            borderWidth: 2,
                            fill: true,
                            tension: 0.4,
                            yAxisID: 'y1'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    interaction: {
                        mode: 'index',
                        intersect: false,
                    },
                    scales: {
                        y: {
                            type: 'linear',
                            display: true,
                            position: 'left',
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Sales Amount (₹)'
                            }
                        },
                        y1: {
                            type: 'linear',
                            display: true,
                            position: 'right',
                            beginAtZero: true,
                            grid: {
                                drawOnChartArea: false,
                            },
                            title: {
                                display: true,
                                text: 'Number of Orders'
                            }
                        }
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.datasetIndex === 0) {
                                        label += `₹${context.raw.toLocaleString('en-IN')}`;
                                    } else {
                                        label += context.raw;
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });

            // Handle case where no data is returned
            if (salesData.length === 0) {
