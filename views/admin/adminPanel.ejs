<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener("DOMContentLoaded", function () {
    const ctx = document.getElementById("myChart").getContext("2d");
    let myChart;

    function showToast(message, type = "error") {
        const toastContainer = document.getElementById("toast-container");
        const toast = document.createElement("div");
        toast.className = `toast ${type}`;
        toast.textContent = message;
        toastContainer.appendChild(toast);
        setTimeout(() => {
            toast.remove();
        }, 3000);
    }

    async function fetchSalesData(startDate, endDate) {
        try {
            const url = `/admin/sales-data?startDate=${startDate}&endDate=${endDate}`;
            const response = await fetch(url);
            if (!response.ok) throw new Error(`HTTP error! Status: ${response.status}`);
            const salesData = await response.json();

            const labels = salesData.map(data => new Date(data._id).toLocaleDateString());
            const totalSales = salesData.map(data => data.totalSales);
            const orderCount = salesData.map(data => data.orderCount);

            const totalSalesSum = totalSales.reduce((sum, val) => sum + val, 0);
            const totalOrdersSum = orderCount.reduce((sum, val) => sum + val, 0);
            const avgOrderValue = totalOrdersSum > 0 ? totalSalesSum / totalOrdersSum : 0;

            document.getElementById("totalSalesValue").textContent = `₹${totalSalesSum.toLocaleString('en-IN')}`;
            document.getElementById("totalOrdersValue").textContent = totalOrdersSum;
            document.getElementById("avgOrderValue").textContent = `₹${avgOrderValue.toLocaleString('en-IN', { maximumFractionDigits: 2 })}`;

            if (myChart) myChart.destroy();

            myChart = new Chart(ctx, {
                type: "line",
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: "Total Sales (₹)",
                            data: totalSales,
                            backgroundColor: "rgba(75, 192, 192, 0.3)",
                            borderColor: "rgba(75, 192, 192, 1)",
                            borderWidth: 2,
                            fill: true,
                            tension: 0.4,
                            yAxisID: 'y'
                        },
                        {
                            label: "Total Orders",
                            data: orderCount,
                            backgroundColor: "rgba(255, 99, 132, 0.3)",
                            borderColor: "rgba(255, 99, 132, 1)",
                            borderWidth: 2,
                            fill: true,
                            tension: 0.4,
                            yAxisID: 'y1'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    interaction: { mode: 'index', intersect: false },
                    scales: {
                        y: { type: 'linear', display: true, position: 'left', beginAtZero: true, title: { display: true, text: 'Sales Amount (₹)' } },
                        y1: { type: 'linear', display: true, position: 'right', beginAtZero: true, grid: { drawOnChartArea: false }, title: { display: true, text: 'Number of Orders' } }
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) label += ': ';
                                    label += context.datasetIndex === 0 ? `₹${context.raw.toLocaleString('en-IN')}` : context.raw;
                                    return label;
                                }
                            }
                        }
                    }
                }
            });

            if (salesData.length === 0) {
                document.getElementById("totalSalesValue").textContent = "₹0";
                document.getElementById("totalOrdersValue").textContent = "0";
                document.getElementById("avgOrderValue").textContent = "₹0";
                ctx.font = "20px Arial";
                ctx.fillStyle = "gray";
                ctx.textAlign = "center";
                ctx.fillText("No sales data for selected period", ctx.canvas.width/2, ctx.canvas.height/2);
            }

        } catch (error) {
            console.error("Error fetching sales data:", error);
            showToast("Failed to fetch sales data. Please try again.", "error");
        }
    }

    const today = new Date();
    const todayStr = today.toISOString().split("T")[0];
    const twentyDaysAgo = new Date();
    twentyDaysAgo.setDate(twentyDaysAgo.getDate() - 20);
    const defaultStartDate = twentyDaysAgo.toISOString().split("T")[0];

    document.getElementById("chartStartDate").value = defaultStartDate;
    document.getElementById("chartEndDate").value = todayStr;

    fetchSalesData(defaultStartDate, todayStr);

    document.getElementById("fetchSales").addEventListener("click", () => {
        const startDate = document.getElementById("chartStartDate").value;
        const endDate = document.getElementById("chartEndDate").value;

        const start = new Date(startDate); start.setHours(0,0,0,0);
        const end = new Date(endDate); end.setHours(0,0,0,0);
        const todayDate = new Date(); todayDate.setHours(0,0,0,0);

        if (start > end) { showToast("Select a proper date range", "error"); return; }
        if (end > todayDate && start <= todayDate) { showToast("End date cannot be after today", "warning"); document.getElementById("chartEndDate").value = todayStr; return; }
        if (start > todayDate && end > todayDate) { showToast("Select proper date — cannot be after today", "error"); return; }

        fetchSalesData(startDate, endDate);
    });
});
</script>
